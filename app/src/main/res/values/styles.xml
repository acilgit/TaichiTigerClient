<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--buttons-->
    <style name="btnCommit" parent="buttonBase">
        <item name="colorAccent">@color/colorCommit</item>
        <item name="colorButtonNormal">@color/gray</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>

    <style name="btnCommitFull" parent="btnCommit">
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="btnOption" parent="buttonBase">
        <item name="colorAccent">@color/colorOption</item>
        <item name="colorButtonNormal">@color/gray</item>
        <item name="android:textColor">@color/textWhite</item>
    </style>


    <style name="btnOptionFull" parent="btnOption">
        <item name="android:layout_height">52dp</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="ratingBar.Small" parent="Widget.AppCompat.RatingBar.Small">
    <item name="android:isIndicator">true</item>
    <item name="android:max">50</item>
    <item name="android:progressBackgroundTintMode" tools:targetApi="lollipop">@color/gray</item>
    <item name="android:progressTint" tools:targetApi="lollipop">@color/starOn</item>
    <item name="android:secondaryProgressTint" tools:targetApi="lollipop">@android:color/transparent</item>
    <item name="android:stepSize">1</item>
    </style>
</resources>
