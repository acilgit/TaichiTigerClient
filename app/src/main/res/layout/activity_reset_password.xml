<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgActivity"
    android:orientation="vertical"
    tools:context="com.taichitiger.client.activity.ResetPasswordActivity">

    <include layout="@layout/appbar" />

    <View
        android:layout_marginTop="16dp"
        style="@style/divider" />

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tlPhone"
            android:hint="手机号"
            android:textColorHint="@color/textLite"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/textNormal"
                android:background="@null"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnCode"
            android:text="获取验证码"
            android:textSize="@dimen/text_size_13"
            style="@style/btn"
            android:theme="@style/btnOption"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="112dp"
            android:layout_height="44dp" />

    </RelativeLayout>

    <View style="@style/divider" />

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tlCode"
            android:hint="验证码"
            android:textColorHint="@color/textLite"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/textNormal"
                android:background="@null"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <View style="@style/divider" />

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tlPassword"
            android:hint="密码由1-16位数字或者字母组成"
            android:textColorHint="@color/textLite"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/textNormal"
                android:background="@null"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/ivShowPassword"
            android:src="@mipmap/ic_eye_open"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:padding="4dp"
            android:layout_width="36dp"
            android:layout_height="36dp" />

    </RelativeLayout>

    <View style="@style/divider" />

        <Button
            android:id="@+id/btnCommit"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnFullHeight"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/text_commit"
            style="@style/btn"
            android:theme="@style/btnCommitFull" />


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="遇到问题？你可以"
            android:textColor="@color/textLite"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvService"
            android:text="@string/text_communicate_customer_service"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_15"
            android:background="@drawable/selector_item_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
