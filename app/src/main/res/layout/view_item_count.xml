<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="32dp"
    android:id="@+id/llItem"
    android:background="@drawable/shape_round_line_gray"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tvMinus"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item_transparent"
        android:gravity="center"
        android:text="-"
        android:textColor="@color/textLite"
        android:textSize="@dimen/text_size_18" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grayLite" />

    <EditText
        android:id="@+id/etAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:background="@null"
        android:gravity="center"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:textColor="@color/textLite"
        android:textSize="@dimen/text_size_15" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grayLite" />

    <TextView
        android:id="@+id/tvPlus"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_item_transparent"
        android:gravity="center"
        android:text="+"
        android:textColor="@color/colorOption"
        android:textSize="@dimen/text_size_18" />

</LinearLayout>
