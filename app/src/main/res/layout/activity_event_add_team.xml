<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgActivity"
    android:orientation="vertical"
    tools:context="com.taichitiger.client.activity.EventAddTeamActivity">

    <include layout="@layout/appbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@mipmap/wdtdpic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="-健身约球团队-"
            android:textColor="@color/textDark"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="欢迎组织兴趣组织、线下运动团体、企业、家庭等团体入驻！"
            android:textColor="@color/textLite"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="36dp"
            android:text="团队小圈子，大兴趣："
            android:textColor="@color/textDark"
            android:textSize="@dimen/text_size_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="① 组织团队挑战赛，线下活动"
            android:textColor="@color/textNormal"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="② 队友发帖交流"
            android:textColor="@color/textNormal"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:text="③ 目前团队设定上限人数1000人，满员请自建小队"
            android:textColor="@color/textNormal"
            android:textSize="@dimen/text_size_13" />

        <Button
            android:id="@+id/btnCommit"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnFullHeight"
            android:text="创建团队"
            style="@style/btn"
            android:theme="@style/btnCommitFull" />
    </LinearLayout>


</LinearLayout>
