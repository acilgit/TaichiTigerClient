<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgActivity"
    android:orientation="vertical"
    tools:context="com.taichitiger.client.activity.BindNewBankCardActivity">

    <include layout="@layout/appbar" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlName"
        android:hint="真实姓名"
        android:textColorHint="@color/textLite"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/textNormal"
            android:background="@null"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <View style="@style/divider" />


    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlIdentity"
        android:hint="身份证号码"
        android:textColorHint="@color/textLite"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/textNormal"
            android:background="@null"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <View style="@style/divider" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/tlCard"
        android:hint="银行卡卡号"
        android:textColorHint="@color/textLite"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/textNormal"
            android:background="@null"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.design.widget.TextInputLayout>

    <View style="@style/divider" />


    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tlPhone"
            android:hint="手机号码"
            android:textColorHint="@color/textLite"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/textNormal"
                android:background="@null"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnCode"
            android:text="获取验证码"
            android:textSize="@dimen/text_size_13"
            style="@style/btn"
            android:theme="@style/btnOption"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="112dp"
            android:layout_height="44dp" />

    </RelativeLayout>

    <View style="@style/divider" />

    <RelativeLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tlCode"
            android:hint="验证码"
            android:textColorHint="@color/textLite"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <EditText
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/textNormal"
                android:background="@null"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <View style="@style/divider" />

        <Button
            android:id="@+id/btnCommit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btnFullHeight"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:text="@string/text_agree_commit"
            style="@style/btn"
            android:theme="@style/btnCommitFull" />

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="点击注册表示你已同意"
            android:textColor="@color/textLite"
            android:textSize="@dimen/text_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvAgreement"
            android:text="@string/text_tiger_agreement"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
