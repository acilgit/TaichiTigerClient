<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xycode.xylibrary.uiKit.views.loopview.AdLoopView
        android:id="@+id/loopView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:aspectRatio="2.4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <com.taichitiger.client.view.ListItem
            android:id="@+id/liGym"
            app:itemType="3"
            app:itemIcon="@mipmap/ic_gym"
            app:itemName="健身"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.taichitiger.client.view.ListItem
            android:id="@+id/liMassage"
            app:itemType="3"
            app:itemIcon="@mipmap/ic_massage"
            app:itemName="推拿"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.taichitiger.client.view.ListItem
            android:id="@+id/liEducation"
            app:itemType="3"
            app:itemIcon="@mipmap/ic_education"
            app:itemName="教育"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">`

        <RelativeLayout
            android:id="@+id/rlHouseKeep"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_house_keep" />

            <TextView
                android:id="@+id/tvHouseKeep"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="家政"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tvHouseKeep"
                android:text="好好放松自己"
                android:textColor="@color/textNormal"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <View
            android:background="@color/bgDivider"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_width="1px"
            android:layout_height="match_parent"/>
        <RelativeLayout
            android:id="@+id/rlMall"
            android:layout_width="match_parent"
            android:layout_margin="16dp"
            android:layout_height="76dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_mall" />

            <TextView
                android:id="@+id/tvMall"
                android:layout_marginTop="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="商城"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/tvMall"
                android:text="应有尽有"
                android:textColor="@color/textNormal"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="今日精选"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold|italic"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/ivMore"
            android:text="@string/text_more"
            android:textSize="@dimen/text_size_12"
            android:paddingTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="4dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View style="@style/divider" />

    <com.xycode.xylibrary.uiKit.views.MultiImageView
        android:id="@+id/multiView"
        app:maxColumn="4"
        app:itemSameSize="true"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
